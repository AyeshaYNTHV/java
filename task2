<!DOCTYPE html>
<html lang="en">
<head>
  <title>Task 2:Sphere Volume Calculator</title>
  <style>
    body{
      text-align: center;
    }
  </style>
</head>
<body>  
  <form id="sphereForm">
    <label for="inputField">Radius:</label>
    <input type="number" id="inputField" required>
    <input type="button" value="Calculate Volume" onclick="calculateVolume()">
  </form>
  <div id="result"></div>
  <script>
    function sphereVolume(radius) {
      return (4.0 / 3.0) * Math.PI * Math.pow(radius, 3);
    }
    function calculateVolume() {
      var inputField = document.getElementById("inputField");
      var radius = inputField.valueAsNumber;
      if (!isNaN(radius)) {
        var volume = sphereVolume(radius);
        var resultDiv = document.getElementById("result");
        resultDiv.innerHTML = "Sphere volume is: " + volume.toFixed(2);
      } else {
        alert("Please enter a valid number for the radius.");
      }
    }
  </script>
</body>
</html>
